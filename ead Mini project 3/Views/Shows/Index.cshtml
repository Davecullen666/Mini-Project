@model IEnumerable<ead_Mini_project_3.Models.Show>

@{
    ViewBag.Title = "Index";
}

<h2>Find a Show</h2>

<p>
    @Html.ActionLink("Add a show", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Show name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table>
    <tr>
        <th>
            @Html.ActionLink("Show Name ", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            Venue
        </th>

        <th>
            @Html.ActionLink(" Time ", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            Price
        </th>

        <th>
            Main Band
        </th>

        <th>
            Support Band
        </th>

        <th>
            Tickets Left
        </th>

        <th>
            Sold out?
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShowName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainBand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupportBand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketsAvailable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoldOut)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
